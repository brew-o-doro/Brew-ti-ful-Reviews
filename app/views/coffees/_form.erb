<%= render partial: 'layouts/errors', locals: {object: @coffee}  %>

<%= form_with model: @coffee do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, { placeholder: "Italian", class: "form-control"} %>
  <br>
  <%= form.label :brand %>
  <%= form.text_field :brand, { placeholder: "Seattle's Mermaid", class: "form-control"} %>
  <br>
  <%= form.label :description %>
  <%= form.text_field :description, { placeholder: "Light and Toasty", class: "form-control"} %>
  <br>
  <%= form.label :roast_level %>
  <%= form.text_field :roast_level, { placeholder: "Dark", class: "form-control"} %>
  <br>
  <%= form.label :caffeine_content %>
  <%= form.text_field :caffeine_content, { placeholder: "High", class: "form-control"} %>
  <br>
  <%= form.submit "Save Coffee", class: "btn btn-primary" %>
<% end %>
