<%= render partial: 'layouts/errors', locals: {object: @review}  %>

<%= form_with model: @review do |form| %>
  <% if params[:coffee_id] %>
      <%= form.hidden_field :coffee_id %>
    <% else %>
       <%= form.collection_select(:coffee_id, Coffee.all, :id, :title,
        { prompt: "Select A Coffee to Review"}) %>
   <% end %><br>
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control" %>
  <br>
  <%= form.label :rating %>
  <%= form.number_field :rating, min: 0, max: 10, class: "form-control" %>
  <br>
  <%= form.label :description %>
  <%= form.text_field :description, class: "form-control" %>
  <br>
  <%= form.submit "Save Review", class: "btn btn-primary" %>
<% end %>
